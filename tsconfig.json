{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext","DOM"],
    "types":["node"],
    "typeRoots": ["./types","./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "types/**/*.tsx",
    "build/**/*.ts",
    "build/**/*.d.ts"
  ]
}
